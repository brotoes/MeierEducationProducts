            <string>//check for death
if (hp_current &lt;= 0) {
    instance_destroy()
}

//check if it is this instance's turn
if (ds_list_find_value(battle.enemy_listid, battle.whose_turn - 1) == id and 
    hp_current &gt; 0 and alarm[0] == -1 and battle.hp_current &gt; 0 and
    ds_list_size(battle.enemy_listid) &gt; battle.whose_turn - 1 and
    not battle.enemy_turn_block) {
    alarm[0] = 30
}

//step animation
if (instance_number(obj_battleoverlay_par) == 0 and not anim_spawn) {
    animation_counter ++
    if (flash &gt; 0) {
        flash --
    }
    if (anim_heal) {
        randomize()
        anim_heal = false
        //create particles
        for (i = 0; i &lt; 100; i ++) {
            instance_create(x + irandom(sprite_width), y + irandom(sprite_height), obj_heal_part)
        }
        //flash self
        flash = flash_time
        flash_color = C_HEAL
    }
}

//cap hp
if (hp_current &gt; hp_total) {
    hp_current = hp_total
}
