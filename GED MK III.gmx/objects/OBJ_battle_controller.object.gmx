if (instance_number(OBJ_enemy_parent) == 0 and not 
    alarm_set and ds_list_size(queue_listid) == 0
    and instance_number(OBJ_fade_out) == 0) {
    victory = true
    alarm[0] = 70
    alarm_set = true
} else if (hp_current &lt;= 0 and not alarm_set) {
    victory = false
    alarm[0] = 10
    alarm_set = true
}

if (whose_turn != 0) {
    target = OBJ_null
} else if (ready_to_draw) {
    player_dmg_mult = 1
    ready_to_draw = false
    randomize()
    cards_to_pop = persistent_variables.hand_size - instance_number(OBJ_card)
    for (i = 0; i &lt; cards_to_pop; i ++) {
        instance_create(0, 0, OBJ_card)
    }
}

//spawn new enemies if queued and space available
first_loop = true
while (whose_turn == instance_number(OBJ_enemy_parent) + 1 and 
       ds_list_size(queue_listid) &gt; 0 and screen_space &gt; used_space) {
    if (first_loop) {
        battle_banner.banner = "Reinforcements!"
        first_loop = false
    }
    
    pos = 0
    //get position of new enemies
    if (ds_list_size(deaths_listid) &gt; 0) {
        new_x = ds_list_find_value(deaths_listid, 0)
        ds_list_delete(deaths_listid, 0)
        
        //count number of enemies left of new_x
        while (ds_list_find_value(enemy_listid, pos).x &lt; new_x) {
            pos ++
        }
    } else {
        new_x = 0
    }
    
    //spawn and set variables
    new_enemy = instance_create(new_x, 0, ds_list_find_value(queue_listid, 0))
    enemy_size = sprite_get_bbox_right(new_enemy.sprite_index) - 
                    sprite_get_bbox_left(new_enemy.sprite_index)
    new_enemy.successor = ds_list_find_value(succession_listid, 0)
    new_enemy.turn_priority = instance_number(OBJ_enemy_parent)
    
    //maintain lists
    if (new_x != 0) {
        ds_list_insert(enemy_listid, pos, new_enemy)
    } else {
        ds_list_add(enemy_listid, new_enemy)
    }
    ds_list_delete(queue_listid, 0)
    ds_list_delete(succession_listid, 0)
    
    for (i = 0; i &lt; ds_list_size(enemy_listid); i ++) {
        inst_id = ds_list_find_value(enemy_listid, i)
        show_debug_message(string(i) + ": " + inst_id.name + " (" + string(inst_id.speed_stat) + "), " + string(inst_id))
    }
    show_debug_message(" ")
    
    sort(enemy_listid, speed_comp)
    
    for (i = 0; i &lt; ds_list_size(enemy_listid); i ++) {
        inst_id = ds_list_find_value(enemy_listid, i)
        show_debug_message(string(i) + ": " + inst_id.name + " (" + string(inst_id.speed_stat) + "), " + string(inst_id))
    }
    
    position_enemies(used_space, screen_space, enemy_listid)
}

if (whose_turn == instance_number(OBJ_enemy_parent) + 1 and not turn_end_waiting) {
