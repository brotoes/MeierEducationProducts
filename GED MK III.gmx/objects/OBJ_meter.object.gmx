        <arguments>
          <argument>
            <kind>1</kind>
            <string>//animate
if (fill &gt; visualized) {
    visualized += animate_speed
    if (fill &lt; visualized) {
        visualized = fill
    }
} else if (fill &lt; visualized) {
    visualized -= animate_speed
    if (fill &gt; visualized) {
        visualized = fill
    }
}
</string>
