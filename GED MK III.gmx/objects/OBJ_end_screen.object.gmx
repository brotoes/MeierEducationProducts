            <string>battle_controller = instance_find(OBJ_battle_controller, 0)
persistent_variables = instance_find(OBJ_persistent_variables, 0)

victory = battle_controller.victory
gold_earned = battle_controller.gold_earned
gold = persistent_variables.gold

gold_total = floor(gold_earned*persistent_variables.gold_multiplier) + gold

//TODO gather any stats worth being displayed

//drawing variables
anim_counter = 0
margin = 50
text_margin = 10

banner_left = margin
banner_top = margin
banner_right = room_width - margin
banner_bottom = margin + 100

earn_left = margin
earn_top = banner_bottom + margin
earn_right = room_width/2 - margin/2
earn_bottom = room_height - margin

avail_left = room_width/2 + margin/2
avail_top = banner_bottom + margin
avail_right = room_width - margin
avail_bottom = room_height - margin

//drawing strings
banner_str = ""
if (victory) {
    banner_str = "VICTORY!"
} else {
    banner_str = "DEFEAT . . ."
}

earnstr_listid = battle_controller.killname_listid
earnval_listid = battle_controller.killval_listid

ds_list_insert(earnstr_listid, 0, "Spoils")
ds_list_insert(earnval_listid, 0, "")

ds_list_add(earnstr_listid, "")
ds_list_add(earnval_listid, "")

ds_list_add(earnstr_listid, "Zennis Earned")
ds_list_add(earnval_listid, string(gold_earned) + " x " + 
    string(persistent_variables.gold_multiplier))

ds_list_add(earnstr_listid, "Total Zennis")
ds_list_add(earnval_listid, gold_total)
</string>
