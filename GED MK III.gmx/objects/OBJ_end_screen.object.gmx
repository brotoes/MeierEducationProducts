persistent_variables = instance_find(OBJ_persistent_variables, 0)

victory = battle_controller.victory
gold_earned = battle_controller.gold_earned

gold_total = floor(gold_earned*persistent_variables.gold_multiplier)

//drawing variables
anim_counter = 0
main_col = make_color_rgb(73, 169, 129)
out_col = make_color_rgb(11, 74, 63)
margin = 10
line_time = 15
