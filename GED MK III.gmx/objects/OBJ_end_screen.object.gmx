        <arguments>
          <argument>
            <kind>1</kind>
            <string>//draw backdrop
draw_set_alpha(0.5)
draw_set_color(c_blue)
draw_rectangle(0, 0, room_width, room_height, false)
draw_set_alpha(1)

draw_set_color(c_blue)
draw_roundrect(banner_left, banner_top, banner_right, banner_bottom, false)
draw_set_color(c_white)
draw_roundrect(banner_left, banner_top, banner_right, banner_bottom, true)
draw_set_color(c_blue)
draw_roundrect(earn_left, earn_top, earn_right, earn_bottom, false)
draw_set_color(c_white)
draw_roundrect(earn_left, earn_top, earn_right, earn_bottom, true)
draw_set_color(c_blue)
draw_roundrect(avail_left, avail_top, avail_right, avail_bottom, false)
draw_set_color(c_white)
draw_roundrect(avail_left, avail_top, avail_right, avail_bottom, true)

//draw text
draw_set_color(c_white)
draw_set_font(FONT_big_arial)
banner_x = room_width/2 - string_width(banner_str)/2
banner_y = (banner_bottom - banner_top)/2 + banner_top - string_height(banner_str)/2
draw_text(banner_x, banner_y, banner_str)

text_left = earn_left + text_margin
text_right = earn_right - text_margin
cur_y = earn_top + text_margin
line_iter = text_margin + string_height("A")
line_time = 20

draw_line(text_left, cur_y + line_iter - text_margin/2, 
            text_right, cur_y + line_iter - text_margin/2)

for (i = 0; i &lt; min(ds_list_size(earnstr_listid), anim_counter/line_time); i ++) {
    str = ds_list_find_value(earnstr_listid, i)
    val = ds_list_find_value(earnval_listid, i)
    
    draw_text(text_left, cur_y, str)
    if (i &gt; min(ds_list_size(earnstr_listid), anim_counter/line_time) - 1
        and not is_string(val)) {
        val = floor((val/line_time)*(anim_counter mod line_time))
    }
    draw_text(text_right - string_width(string(val)), cur_y, val)
    
    cur_y += line_iter
}

if (anim_counter/line_time + 1 &gt; ds_list_size(earnstr_listid)) {
    cur_y -= line_iter + text_margin/2
    draw_line(text_left, cur_y, text_right, cur_y)
}
anim_counter ++


draw_set_color(c_black)
draw_set_font(FONT_normal)
</string>
